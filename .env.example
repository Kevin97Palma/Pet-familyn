# Pet-Family Environment Configuration
# Copy this file to .env and configure with your values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/petfamily_db"
PGHOST=localhost
PGPORT=5432
PGDATABASE=petfamily_db
PGUSER=petfamily
PGPASSWORD=your_secure_password

# Session Configuration
SESSION_SECRET=your_very_secure_session_secret_here_minimum_32_characters

# Server Configuration  
NODE_ENV=production
PORT=5000

# File Storage Configuration
UPLOAD_DIR=./uploads
PUBLIC_FILES_DIR=./public

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional: Application Settings
# APP_NAME="Pet-Family"
# APP_URL="http://localhost:5000"
# MAX_FILE_SIZE=10485760